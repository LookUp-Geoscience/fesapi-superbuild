{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 30,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "TPL_MIRROR_DIR": "${sourceDir}/tplMirror",
                "NUM_PROC": "4"                
            }
        },
        {
            "name": "mpi",
            "cacheVariables": {
                "MPI_C_COMPILER": "/usr/bin/mpicc",
                "MPI_CXX_COMPILER": "/usr/bin/mpicxx",
                "ENABLE_MPI": "TRUE"
            }
        },
        {
            "name": "gcc",
            "cacheVariables": {
                "ENABLE_MPI": "FALSE"
            }
        },
        {
            "name": "debug-gcc",
            "displayName": "Debug GCC",
            "inherits": ["base", "gcc"],
            "cacheVariables": {
                "BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "debug-mpi",
            "displayName": "Debug MPI",
            "inherits": ["base", "mpi"],
            "cacheVariables": {
                "BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-gcc",
            "displayName": "Release GCC",
            "inherits": ["base", "gcc"],
            "cacheVariables": {
                "BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-mpi",
            "displayName": "Release",
            "inherits": ["base", "mpi"],
            "cacheVariables": {
                "BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-gcc",            
            "configurePreset": "debug-gcc"
        },
        {
            "name": "debug-mpi",
            "configurePreset": "debug-mpi"
        },
        {
            "name": "release-gcc",
            "configurePreset": "release-gcc"
        },
        {
            "name": "release-mpi",
            "configurePreset": "release-mpi"
        }
    ]
}